# Atalhos aliases
alias al='code ~/.aliases/aliases' # Editar o bash
alias alu='source ~/.bashrc && source ~/.zshrc' # Atualizar os terminais
alias cdal='cd ~/.aliases' # Ir para o diretório desse arquivo
alias gal='cd ~/.aliases/ && git add . && git commit -m a && git push && cd -' # Atualizar Github com a atualização rapidamente
alias galupdate='cd ~/.aliases/ && git fetch && git pull && cd -' # Dar git pull nas atualizações do repositório 

alias z='code ~/.zshrc'  # Editar o .zshrc
alias b='code ~/.bashrc' # Editar o .bashrc

